# Backend environment variables
# Copy this file to `.env` and fill in the values.

# Public base URL for webhooks (must be https in production)
# Example for local testing without webhooks: leave empty
PUBLIC_API_BASE=

# Replicate API credentials (required to enable Img2Img and Txt2Img)
REPLICATE_API_TOKEN=
REPLICATE_WEBHOOK_SECRET=

# Optional: Feature toggles
# FEATURE_REPLICATE_IMG2IMG=true

# Storage backend selection (default: firebase)
# STORAGE_BACKEND=firebase

# Firebase bucket override (auto-resolves from SA if omitted)
# FIREBASE_STORAGE_BUCKET=
